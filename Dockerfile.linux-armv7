# BUILDER
FROM golang:1.19 AS builder
WORKDIR /go-build
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=arm GOARM=7 go build -a -o /go-build/home-hub .

# RUNNER
FROM alpine:3
WORKDIR /usr/local/bin
COPY --from=builder /go-build/home-hub .

# it does accept the variable $SERVICE
CMD ["home-hub"]

